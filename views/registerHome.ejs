        <div class="form-container">
            <form id="myform" action="/home" method="GET" class="register-property">
                <h1 class="head-title">Register your Property</h1>
                <div class="input-group grp-1">
                    <label class="form-label">Property Name</label>
                    <input type="text" id="Apartment_Name" class="form-input" placeholder="Name of your Accommodation" required/>
                    <!-- <small class="form-message"></small> -->
                </div>
                <div class="input-group grp-2">
                    <label  class="form-label">Location</label>
                    <select class="form-input" id="Location" required>
                        <option selected disabled value="">--Select--</option>
                        <option value="Andheri">Andheri</option>
                        <option value="Mira Road">Mira Road</option>
                        <option value="Bhayander">Bhayander</option>
                        <option value="Bandra">Bandra</option>
                        <option value="Borivali">Borivali</option>
                        <option value="BKC">BKC</option>
                        <option value="Churchgate">Churchgate</option>
                        <option value="Charni Road">Charni Road</option>
                        <option value="Juhu">Juhu</option>
                        <option value="Chembur">Chembur</option>
                        <option value="Santacruz">Santacruz</option>
                        <option value="Dahisar">Dahisar</option>
                        <option value="Goregaon">Goregaon</option>
                        <option value="Vile Parle">Vile Parle</option>
                        <option value="Jogeshwari">Jogeshwari</option>
                        <option value="Malad">Malad</option>
                        <option value="Mahim">Mahim</option>
                        <option value="Prabhadevi">Prabhadevi</option>
                        <option value="Mumbai Central">Mumbai Central</option>
                        <option value="Mumbai CST">Mumbai CST</option>
                        <option value="Kurla">Kurla</option>
                        <option value="Sion">Sion</option>
                        <option value="Worli">Worli</option>
                        <option value="Navi Mumbai">Navi Mumbai</option>
                        <option value="Kharghar">Kharghar</option>
                        <option value="King Circle">King Circle</option>
                        <option value="Wadala">Wadala</option>
                        <option value="Vasai">Vasai</option>
                        <option value="Virar">Virar</option>
                        <option value="Vidya Vihar">Vidya Vihar</option>
                        <option value="Nahor">Nahor</option>
                        <option value="Mankhurd">Mankhurd</option>
                    </select>
                </div>
                <div class="input-group grp-3">
                    <label  class="form-label">Name</label>
                    <input type="text" id="Owner_Name" value="<%= usr.full_name %>" class="form-input" placeholder="Your Name" />
                    <!-- <small class="form-message"></small> -->
                </div>
                <div class="input-group grp-4">
                    <label  class="form-label">Contact No</label>
                    <input type="text" id="Owner_Contact" value="<%= usr.mobile %>" class="form-input" placeholder="Your Mobile Number"/>
                    <!-- <small class="form-message"></small> -->
                </div>
                <div class="input-group grp-5">
                    <label  class="form-label">Email ID</label>
                    <input id="Owner_Email" type="email" value="<%= usr.email %>" class="form-input" placeholder="Your Email ID"/>
                    <!-- <small class="form-message"></small> -->
                </div>
                <div class="input-group grp-6">
                    <label  class="form-label">Description</label>
                    <textarea class="form-input" id="Description" cols="30" rows="3" placeholder="Describe your Accommodation"></textarea>
                    <!-- <small class="form-message"></small> -->
                </div>
                <div class="input-group grp-7">
                    <label  class="form-label">Deposit Amount</label>
                    <input id="Deposit" type="text" class="form-input" placeholder="Deposit Amount"/>
                    <!-- <small class="form-message"></small> -->
                </div>
                <div class="input-group">
                    <label  class="form-label">Notice Period</label>
                    <input id="Notice_Period" type="text" class="form-input" placeholder="Notice Period"/>
                    <!-- <small class="form-message"></small> -->
                </div>
                <div class="input-group grp-8">
                    <label  class="form-label">Available for</label>
                    <select class="form-input" id="Accommodation" required>
                        <option selected disabled value="">--Choose--</option>
                        <option value="Both">Both, Boys and Girls</option>
                        <option value="Boys">Boys</option>
                        <option value="Girls">Girls</option>
                    </select>
                </div>
                <div class="input-group grp-9">
                    <label  class="form-label">Maintenance</label>
                    <input type="text" id="Maintenance" class="form-input" placeholder="Specify the Maintenance Charges" required/>
                    <!-- <small class="form-message"></small> -->
                </div>
                <div class="input-group grp-10">
                    <label  class="form-label">Electricity Charges</label>
                    <input type="text" id="Electricity_Charges" class="form-input" placeholder="Specify the Electricity Charges" required/>
                    <!-- <small class="form-message"></small> -->
                </div>
                <div class="input-group grp-11">
                    <label  class="form-label">Food Availabilty</label>
                    <select class="form-input" id="Food_Availabilty" required>
                        <option selected disabled value="">--Choose--</option>
                        <option value="Yes">Yes</option>
                        <option value="No">No</option>
                    </select>
                </div>
                <div class="input-group grp-12">
                    <label  class="form-label">Parking</label>
                    <select class="form-input" id="Parking" required >
                        <option selected disabled value="">--Choose--</option>
                        <option value="Yes">Yes</option>
                        <option value="No">No</option>
                    </select>
                </div>
                <div class="input-group grp-13">
                    <label  class="form-label">Power Backup</label>
                    <select class="form-input" id="Power_Backup" required>
                        <option selected disabled value="">--Choose--</option>
                        <option value="Yes">Yes</option>
                        <option value="No">No</option>
                    </select>
                </div>
                <div class="input-group grp-14">
                    <label  class="form-label">AC Rooms</label>
                    <select class="form-input"  id="AC_Rooms" required>
                        <option selected disabled>--Choose--</option>
                        <option value="Yes">Yes</option>
                        <option value="No">No</option>
                    </select>
                </div>
                <div class="input-group grp-15">
                    <label  class="form-label">Number of Beds</label>
                    <input type="text" id="No_of_Beds" class="form-input" placeholder="Name of your Accommodation"/>
                    <!-- <small class="form-message"></small> -->
                </div>
                <div class="input-group grp-16">
                    <label for="imgcontainer" class="form-label">Images for your Property</label>
                    <div class="imgcontainer">
                        <!-- <input type="file" class="form-images" id="img-files" accept=".jpeg, .jpg, .png" onchange="preview()" multiple/> -->
                        <input required type="file" class="form-images" id="img-files" accept=".jpeg, .jpg, .png" multiple/>
                        <label for="img-files">Choose images</label>
                        <p id="numofimg">No files Chosen</p>
                        <div id="imageschosen"></div>
                    </div>
                </div>

                <button type="submit" id="register" class="registerpropBtn">Register</button>
                <input type="text" id="userid" value="<%= usr._id %>" style="visibility: hidden;">
            </form>
        </div>

